{% extends 'base.html.twig' %}
{% block body %}
    <!--================Home Banner Area =================-->
    <section class="banner_area">
        <div class="banner_inner d-flex align-items-center">
            <div class="container">
                <div class="banner_content text-center">
                    <h2>Ð¡hoose a bed for planting</h2>
                    <div class="page_link">
                        <a href={{ path('homepage') }}>Home</a>
                        <a href={{ path('cabinet') }}>Cabinet</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================End Home Banner Area =================-->
    <!--================Category Product Area =================-->
    <section class="cat_product_area p_120">
        <div class="container">
            {% if errorMess != null  %}
            <div class="returning_customer">
                <div class="check_title">
                    <h2>{{ errorMess }}</h2>
                </div>
            </div>
            {% endif %}
            <div class="row flex-row-reverse">
                <div class="col-lg-12">
                    <div class="product_top_bar">
                        <div class="right_page ml-auto">
                            <nav class="cat_page" aria-label="Page navigation example">
                                <ul class="pagination">
                                    <li class="page-item"><a class="page-link" href="{{ path('cabinet', {  offset: previous }) }}"><i class="fa fa-long-arrow-left" aria-hidden="true"></i></a></li>
                                    {% if next < catalogs|length %}
                                        <li class="page-item"><a class="page-link" href="{{ path('cabinet', {  offset: next }) }}"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a></li>
                                    {% endif %}
                                </ul>
                            </nav>
                        </div>
                    </div>
                    <div class="latest_product_inner row">
                        {% for catalog in catalogs %}
                            <div class="col-lg-4 col-md-4 col-sm-6">
                                <div class="f_p_item">
                                    <div class="f_p_img">
                                        <img class="img-fluid" src="{{ asset('uploads/photos/' ~ catalog.photofilename) }}" alt="">
                                        <div class="p_icon">
                                        </div>
                                    </div>
                                    <a href="{{ path('planted',{ plantID: plantID, id: catalog.id }) }}"><h4>{{ catalog }}</h4></a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
