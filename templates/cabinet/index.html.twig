{% extends 'base.html.twig' %}
{% block body %}
    <!--================Category Product Area =================-->
    <section class="cat_product_area p_120">
        <div class="container">
            <div class="row flex-row-reverse">
                <div class="col-lg-12">
                    <div class="product_top_bar">
                        <div class="right_page ml-auto">
                            <nav class="cat_page" aria-label="Page navigation example">
                                <ul class="pagination">
                                    <li class="page-item"><a class="page-link" href="{{ path('cabinet', {  offset: previous }) }}"><i class="fa fa-long-arrow-left" aria-hidden="true"></i></a></li>
                                    {% if next < catalogs|length %}
                                        <li class="page-item"><a class="page-link" href="{{ path('cabinet', {  offset: next }) }}"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a></li>
                                    {% endif %}
                                </ul>
                            </nav>
                        </div>
                    </div>
                    <div class="latest_product_inner row">
                        {% for catalog in catalogs %}
                            <div class="col-lg-4 col-md-4 col-sm-6">
                                <div class="f_p_item">
                                    <div class="f_p_img">
                                        <img class="img-fluid" src="{{ asset('uploads/photos/' ~ catalog.photofilename) }}" alt="">
                                        <div class="p_icon">
                                        </div>
                                    </div>
                                    <a href="{{ path('itemcabinet', { id: catalog.id }) }}"><h4>{{ catalog }}</h4></a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================Cart Area =================-->
    <section class="cart_area">
        <div class="container">
            <div class="cart_inner">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">Product</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Maturation period</th>
                            <th scope="col">Square</th>
                            <th scope="col">Bed</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for plant in plants %}
                            <tr>
                                <td>
                                    <div class="media">
                                        <div class="d-flex">

                                        </div>
                                        <div class="media-body">
                                            <p>{{ plant.catalog }}</p>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <h5>{{ plant.quantity }}</h5>
                                </td>
                                <td>
                                    <h5>{{ plant.dateEnd|date('Y-m-d') }}</h5>
                                </td>
                                <td>
                                    <h5>{{ plant.square }}</h5>
                                </td>
                                <td>
                                    {% if plant.bed %}
                                    <h5>{{ plant.bed }}</h5>
                                    {% else %}
                                        <p>
                                            <a href="{{ path('plant', { id: plant.id }) }}">To plant</a>
                                        </p>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
